<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/imageButton_pass"
        android:layout_width="114dp"
        android:layout_height="108dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="300dp"
        android:adjustViewBounds="true"
        android:padding="0dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/cinture" />

    <ImageButton
        android:id="@+id/imageButton_drive"
        android:layout_width="114dp"
        android:layout_height="108dp"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="300dp"
        android:adjustViewBounds="true"
        android:padding="0dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/car2" />

    <TextView
        android:id="@+id/textView_titolo"
        android:layout_width="290dp"
        android:layout_height="49dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="55dp"
        android:text="COSA VUOI FARE?"
        android:textAllCaps="false"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="36sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_passeggero"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="8dp"
        android:text="PASSEGGERO"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/imageButton_pass"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView_guidatore"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginStart="65dp"
        android:layout_marginBottom="8dp"
        android:text="GUIDATORE"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/imageButton_drive"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>