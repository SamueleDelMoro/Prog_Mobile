<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.575"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_Tratta"
        android:layout_width="258dp"
        android:layout_height="41dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="4dp"
        android:text="Seleziona Tratta"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_Tratta2"
        android:layout_width="258dp"
        android:layout_height="41dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="128dp"
        android:text="Andata o Ritorno?"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_Tratta3"
        android:layout_width="337dp"
        android:layout_height="41dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="268dp"
        android:text="Scegli l'orario di partenza"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <RadioGroup
        android:id="@+id/rgroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="172dp"
        android:layout_marginTop="184dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/radio_and"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="rbclick"
            android:text="ANDATA" />

        <RadioButton
            android:id="@+id/radio_rit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="rbclick"
            android:text="RITORNO" />

    </RadioGroup>

    <Button
        android:id="@+id/button_Time"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="344dp"
        android:text="ORA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_Ora"
        android:layout_width="119dp"
        android:layout_height="40dp"
        android:layout_marginStart="208dp"
        android:layout_marginTop="344dp"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_NumPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="96dp"
        android:layout_marginTop="408dp"
        android:text="Posti Disponibili"
        android:textAlignment="textStart"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="164dp"
        android:layout_marginTop="456dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>